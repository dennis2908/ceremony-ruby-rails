<h1 class="title">Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render partial: 'devise/registrations/user_info', locals:{f: f, type: "text_field", attribute: "email", label: "Email", c: "input"} %>
  <%= render partial: 'devise/registrations/user_info', locals:{f: f, type: "password_field", attribute: "password", label: "Password", c: "input"} %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= f.submit "Log in", :class => "button is-success"%>
<% end %>

<%= render "devise/shared/links" %>