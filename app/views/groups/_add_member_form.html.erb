<%= form_for group, :url => add_member_group_path do |f| %>
  <%=f.fields_for :members, group.members.build do |members_fields|%>
    <%= members_fields.label :name, "Add Member By Email or Username:", class: "label" %>
    <div class="field has-addons">
      <div class="control">
        <%= members_fields.text_field :name, class: "input"%>
      </div>
      <div class="control">
        <%= members_fields.submit "Add", class: "button is-dark" %>
      </div>
    </div>
  <% end %>
<% end%>