
<% if policy(group).join? %>
  <%= link_to "Join Group", join_group_path, class: "button is-info", method: :patch %>
<% end %>

<% if policy(group).leave? %>
  <%= link_to "Leave Group", leave_group_path, class: "button is-danger", method: :patch %>
<% end %>

<% if policy(group).leader? %>
  <%= link_to "Edit Group", edit_group_path(group), class: "button is-info" %>
  <%= link_to "Delete Group", group_path(group), data: { confirm: "Delete this group?" }, method: :delete, class: "button is-danger" %>
<% end %>